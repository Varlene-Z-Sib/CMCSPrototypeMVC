@model List<CMCSPrototypeMVC.Models.Claim>

@{
    ViewData["Title"] = "Notifications";
}

<style>
    /* Reusing styling from Review Claims */
    body {
        font-family: Arial, sans-serif;
        background-color: #f5f5f5;
    }

    h2 {
        color: #ff6600;
        text-align: center;
        margin-bottom: 20px;
    }

    .table-container {
        background-color: white;
        padding: 20px;
        border-radius: 8px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        margin: 0 auto;
        max-width: 1000px;
    }

    table {
        width: 100%;
        border-collapse: collapse;
        margin-bottom: 20px;
    }

    th, td {
        padding: 12px;
        text-align: left;
        border-bottom: 1px solid #ddd;
    }

    th {
        background-color: #ff6600;
        color: white;
    }

    tr:nth-child(even) {
        background-color: #f2f2f2;
    }

    a {
        color: #ff6600;
        text-decoration: none;
    }

        a:hover {
            text-decoration: underline;
        }

    .btn-primary {
        background-color: #007bff;
        color: white;
        padding: 10px 20px;
        border-radius: 4px;
        border: none;
        cursor: pointer;
    }

        .btn-primary:hover {
            background-color: #0056b3;
        }

    .mt-3 {
        text-align: center;
        margin-top: 20px;
    }

    .alert {
        padding: 15px;
        margin-bottom: 20px;
        border: 1px solid transparent;
        border-radius: 4px;
        text-align: center;
        max-width: 1000px;
        margin: 0 auto;
    }

    .alert-success {
        color: #155724;
        background-color: #d4edda;
        border-color: #c3e6cb;
    }

    .alert-danger {
        color: #721c24;
        background-color: #f8d7da;
        border-color: #f5c6cb;
    }

    .alert-info {
        color: #0c5460;
        background-color: #d1ecf1;
        border-color: #bee5eb;
    }
</style>

<h2>Your Submitted Claims</h2>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["SuccessMessage"]
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">
        @TempData["ErrorMessage"]
    </div>
}

@if (TempData["InfoMessage"] != null)
{
    <div class="alert alert-info">
        @TempData["InfoMessage"]
    </div>
}

<div class="table-container">
    <table>
        <thead>
            <tr>
                <th>Claim ID</th>
                <th>Date Claimed</th>
                <th>Status</th>
                <th>Notification</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                foreach (var claim in Model)
                {
                    <tr>
                        <td>@claim.Id</td>
                        <td>@claim.DateClaimed.ToString("MM/dd/yyyy")</td>
                        <td>
                            @(claim.StatusId == 3 ? "Pending" :
                                claim.StatusId == 2 ? "Approved" :
                                claim.StatusId == 1 ? "Rejected" : "Unknown")
                        </td>
                        <td>
                            @if (!string.IsNullOrEmpty(claim.NotificationMessage))
                            {
                                <span class="text-success">@claim.NotificationMessage</span>
                            }
                            else
                            {
                                <span class="text-muted">No updates yet</span>
                            }
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="4" class="text-center text-muted">No claims submitted yet.</td>
                </tr>
            }
        </tbody>
    </table>
</div>

<div class="text-center mt-3">
    <br> <a href="/Claims/SubmitClaim" class="btn btn-primary">Submit a New Claim</a>
</div>
