@{
    ViewBag.Title = "Claim Submitted";
}

<!-- Page Container -->
<div class="claim-submitted-container">
    <!-- Title -->
    <h2>Claim Submitted</h2>

    <!-- Success Message -->
    @if (ViewBag.SuccessMessage != null)
    {
        <div class="alert alert-success">@ViewBag.SuccessMessage</div>
    }

    <!-- Informational Text -->
    <p>Your claim has been submitted for review. Thank you!</p>

    <!-- Button to go back to home -->
    <div class="mt-3">
        <a href="/" class="btn btn-primary">Back to Home</a>
    </div>
</div>

<!-- Internal CSS to Style the Page -->
<style>
    /* Container */
    .claim-submitted-container {
        background-color: white;
        max-width: 600px;
        margin: 50px auto;
        padding: 20px;
        border-radius: 8px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        text-align: center;
        font-family: Arial, sans-serif;
    }

    /* Title Styling */
    h2 {
        color: #ff6600; /* Bright Orange Title */
        font-size: 24px;
        margin-bottom: 20px;
    }

    /* Success Message Styling */
    .alert {
        background-color: #d4edda;
        border: 1px solid #c3e6cb;
        color: #155724;
        padding: 10px;
        border-radius: 4px;
        margin-bottom: 20px;
        font-size: 16px;
    }

    /* Paragraph Text */
    p {
        font-size: 16px;
        color: #333;
        margin-bottom: 20px;
    }

    /* Button Styling */
    .btn-primary {
        background-color: #ff6600;
        color: white;
        padding: 10px 20px;
        border-radius: 4px;
        border: none;
        text-decoration: none;
        cursor: pointer;
    }

        .btn-primary:hover {
            background-color: #e65c00; /* Darker orange on hover */
        }

    /* Margin Top for the button */
    .mt-3 {
        margin-top: 20px;
    }
</style>
