@{
    ViewData["Title"] = "HR Dashboard";
}

<h1>HR Dashboard</h1>

<style>
    /* Styling for the HR Dashboard page */
    body {
        font-family: Arial, sans-serif;
        background-color: #f5f5f5;
        margin: 0;
        padding: 0;
    }

    h1 {
        color: #ff6600;
        text-align: center;
        margin-top: 40px;
    }

    p {
        font-size: 18px;
        color: #333;
        text-align: center;
    }

    /* Styling for the navigation menu */
    ul {
        list-style-type: none;
        padding: 0;
        margin-top: 30px;
        text-align: center;
    }

    li {
        margin: 10px 0;
    }

    a {
        color: #ff6600;
        text-decoration: none;
        font-size: 16px;
        padding: 10px 20px;
        background-color: #ffffff;
        border: 1px solid #ff6600;
        border-radius: 4px;
        transition: background-color 0.3s ease;
    }

        a:hover {
            background-color: #ff6600;
            color: white;
        }

    /* Card-like container for the statistics */
    .statistics-container {
        background-color: white;
        padding: 30px;
        border-radius: 8px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        margin: 0 auto;
        max-width: 600px;
    }

        .statistics-container p {
            font-size: 20px;
            margin-bottom: 10px;
        }

            .statistics-container p span {
                font-weight: bold;
                color: #333;
            }

    .statistics-container {
        text-align: center;
    }
</style>

<div class="statistics-container">
    <p>Total Lecturers: <span>@ViewBag.TotalLecturers</span></p>
    <p>Total Claims: <span>@ViewBag.TotalClaims</span></p>
    <p>Approved Claims: <span>@ViewBag.ApprovedClaims</span></p>
    <p>Pending Claims: <span>@ViewBag.PendingClaims</span></p>
</div>

<!-- Navigation for HR tasks -->
<div>
    <ul>
        <li><a href="/HR/ViewClaims">Review Claims</a></li> <!-- Navigate to the Review Claims page -->
        <li><a href="/HR/ManageLecturers">Manage Lecturers</a></li>
        <li><a href="/HR/AddLecturer">Add Lecturer</a></li>
        <li><a href="/HR/GenerateReports">Generate Reports</a></li>
        <li><a href="/Claims/ReviewClaims">Back</a></li>
    </ul>
</div>
