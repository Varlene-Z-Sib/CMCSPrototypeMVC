<style>
    /* Internal styling for Generate Reports page */
    body {
        font-family: Arial, sans-serif;
        background-color: #f9f9f9;
        margin: 0;
        padding: 0;
    }

    h2 {
        color: #ff6600;
        text-align: center;
        margin-top: 30px;
    }

    .alert-warning {
        padding: 15px;
        border-radius: 5px;
        text-align: center;
        margin-top: 20px;
        background-color: #fff3cd;
        border-color: #ffeeba;
        color: #856404;
    }

    .table {
        margin-top: 30px;
        width: 100%;
        border-collapse: collapse;
    }

        .table th, .table td {
            padding: 12px;
            text-align: center;
            border: 1px solid #ddd;
        }

    .table-striped tbody tr:nth-child(odd) {
        background-color: #f2f2f2;
    }

    .btn-link {
        color: #007bff;
        text-decoration: none;
        font-size: 14px;
    }

        .btn-link:hover {
            text-decoration: underline;
        }

    .btn-primary {
        background-color: #007bff;
        border-color: #007bff;
        padding: 10px 20px;
        font-size: 16px;
        color: white;
        border-radius: 5px;
        text-decoration: none;
        display: inline-block;
    }

        .btn-primary:hover {
            background-color: #0056b3;
            border-color: #004085;
        }

    .btn-secondary {
        background-color: #6c757d;
        border-color: #6c757d;
        padding: 10px 20px;
        color: white;
        border-radius: 5px;
        display: inline-block;
        margin-top: 20px;
    }

        .btn-secondary:hover {
            background-color: #5a6268;
            border-color: #4e555b;
        }

    .mt-3 {
        text-align: center;
        margin-top: 30px;
    }
</style>

@{
    ViewData["Title"] = "Generate Reports";
    var report = ViewData["Report"] as List<dynamic>;
}

<h2>Approved Claims Report</h2>

@if (report == null || !report.Any())
{
    <div class="alert alert-warning">HR Report.</div>
}
else
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Claim ID</th>
                <th>Date Claimed</th>
                <th>Lecturer Name</th>
                <th>Hours Worked</th>
                <th>Hourly Rate</th>
                <th>Status</th>
                <th>Total Payment</th>
                <th>Supporting Documents</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var claim in report)
            {
                <tr>
                    <td>@claim.Id</td>
                    <td>@claim.DateClaimed.ToString("MM/dd/yyyy")</td>
                    <td>@claim.LecturerName</td>
                    <td>@claim.HoursWorked</td>
                    <td>@claim.HourlyRate.ToString("C")</td>
                    <td>@claim.Status</td>
                    <td>@claim.TotalPayment.ToString("C")</td>
                    <td>
                        @if (claim.SupportingDocuments.Any())
                        {
                            @foreach (var doc in claim.SupportingDocuments)
                            {
                                <a href="@Url.Content("/Documents/" + doc)" download="@doc" class="btn btn-link">
                                    @doc
                                </a>
                            }
                        }
                        else
                        {
                            <span>No Documents</span>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

<div class="mt-3">
    <a href="@Url.Action("DownloadReport", "HR")" class="btn btn-primary">Download Report (CSV)</a>
</div>

<div class="mt-3">
    <a href="/HR/HRDashboard" class="btn btn-secondary">Back to HR Dashboard</a>
</div>
