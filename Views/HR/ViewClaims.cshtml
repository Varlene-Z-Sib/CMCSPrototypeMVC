@page
@model ViewClaimsModel
@{
    ViewData["Title"] = "View Claims";
}

<h1>View Claims</h1>

<table class="table">
    <thead>
        <tr>
            <th>Lecturer Name</th>
            <th>Hours Worked</th>
            <th>Hourly Rate</th>
            <th>Total Payment</th>
            <th>Status</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var claim in Model.Claims)
        {
            <tr>
                <td>@claim.LecturerName</td>
                <td>@claim.HoursWorked</td>
                <td>@claim.HourlyRate</td>
                <td>@claim.TotalPayment.ToString("C")</td>
                <td>@(claim.StatusId == 2 ? "Approved" : "Pending")</td>
            </tr>
        }
    </tbody>
</table>
