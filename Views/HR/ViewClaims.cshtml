@model List<CMCSPrototypeMVC.Models.Claim>

@{
    ViewData["Title"] = "View Claims";
}

<h1>Claims List</h1>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Lecturer Name</th>
            <th>Hours Worked</th>
            <th>Hourly Rate</th>
            <th>Total Payment</th>
            <th>Status</th>
            <th>Notes</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var claim in Model)
        {
            <tr>
                <td>@claim.LecturerName</td>
                <td>@claim.HoursWorked</td>
                <td>@claim.HourlyRate.ToString("C")</td>
                <td>@claim.TotalPayment.ToString("C")</td>
                <td>@claim.Status</td>
                <td>@claim.Notes</td>
            </tr>
        }
    </tbody>
</table>
