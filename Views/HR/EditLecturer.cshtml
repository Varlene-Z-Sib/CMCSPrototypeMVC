@{
    ViewData["Title"] = "Edit Lecturer";
}

<h2>Edit Lecturer</h2>

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">
        @TempData["ErrorMessage"]
    </div>
}

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["SuccessMessage"]
    </div>
}

<form method="post" action="/HR/EditLecturer/@Model.Id">
    <div class="form-group">
        <label for="name">Lecturer Name</label>
        <input type="text" id="name" name="name" class="form-control" value="@Model.Name" required />
    </div>
    <div class="form-group">
        <label for="contactInfo">Contact Information</label>
        <input type="text" id="contactInfo" name="contactInfo" class="form-control" value="@Model.ContactInfo" required />
    </div>

    <button type="submit" class="btn btn-primary">Update Lecturer</button>
</form>

<div class="mt-3">
    <a href="/HR/ManageLecturers" class="btn btn-secondary">Back to Manage Lecturers</a>
</div>
