<style>
    /* Internal styling for Manage Lecturers page */
    body {
        font-family: Arial, sans-serif;
        background-color: #f9f9f9;
        margin: 0;
        padding: 0;
    }

    h2 {
        color: #ff6600;
        text-align: center;
        margin-top: 30px;
    }

    .alert-success {
        background-color: #d4edda;
        border-color: #c3e6cb;
        color: #155724;
        padding: 15px;
        margin-top: 20px;
        border-radius: 5px;
        text-align: center;
    }

    .table {
        width: 100%;
        margin: 20px auto;
        background-color: white;
        border-collapse: collapse;
        border-radius: 8px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    th, td {
        padding: 12px;
        text-align: left;
        border-bottom: 1px solid #ddd;
    }

    th {
        background-color: #ff6600;
        color: white;
    }

    tr:nth-child(even) {
        background-color: #f2f2f2;
    }

    .btn {
        padding: 8px 16px;
        border-radius: 4px;
        color: white;
        text-decoration: none;
        display: inline-block;
        margin-right: 10px;
        text-align: center;
    }

    .btn-warning {
        background-color: #ffc107;
        border-color: #ffc107;
    }

        .btn-warning:hover {
            background-color: #e0a800;
            border-color: #d39e00;
        }

    .btn-danger {
        background-color: #dc3545;
        border-color: #dc3545;
    }

        .btn-danger:hover {
            background-color: #c82333;
            border-color: #bd2130;
        }

    .btn-primary {
        background-color: #007bff;
        border-color: #007bff;
        padding: 10px 20px;
        font-size: 16px;
        color: white;
        border-radius: 5px;
        text-decoration: none;
        display: inline-block;
    }

        .btn-primary:hover {
            background-color: #0056b3;
            border-color: #004085;
        }

    .mt-3 {
        text-align: center;
        margin-top: 30px;
    }

        .mt-3 a {
            margin: 10px;
        }
</style>

@{
    ViewData["Title"] = "Manage Lecturers";
}

<h2>Manage Lecturers</h2>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["SuccessMessage"]
    </div>
}

<table class="table table-striped">
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Contact Info</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var lecturer in Model)
        {
            <tr>
                <td>@lecturer.Id</td>
                <td>@lecturer.Name</td>
                <td>@lecturer.ContactInfo</td>
                <td>
                    <a href="/HR/EditLecturer/@lecturer.Id" class="btn btn-warning">Edit</a>
                    <a href="/HR/DeleteLecturer/@lecturer.Id" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<div class="mt-3">
    <a href="/HR/AddLecturer" class="btn btn-primary">Add New Lecturer</a>
</div>

<div class="mt-3">
    <a href="/HR/HRDashboard" class="btn btn-primary">Back</a>
</div>
