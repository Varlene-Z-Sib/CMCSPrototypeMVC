@model List<CMCSPrototypeMVC.Models.Lecturer>

@{
    ViewData["Title"] = "Manage Lecturers";
}

<h2>Manage Lecturers</h2>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["SuccessMessage"]
    </div>
}

<table class="table table-striped">
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Contact Info</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var lecturer in Model)
        {
            <tr>
                <td>@lecturer.Id</td>
                <td>@lecturer.Name</td>
                <td>@lecturer.ContactInfo</td>
                <td>
                    <!-- You can add options like Edit, Delete for lecturers here -->
                    <a href="/HR/EditLecturer/@lecturer.Id" class="btn btn-warning">Edit</a>
                    <a href="/HR/DeleteLecturer/@lecturer.Id" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<div class="mt-3">
    <a href="/HR/AddLecturer" class="btn btn-primary">Add New Lecturer</a>
</div>
<div class="mt-3">
    <a href="/HR/HRDashboard" class="btn btn-primary">Back</a>
</div>
